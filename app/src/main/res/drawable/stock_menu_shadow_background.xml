<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Тень -->
    <item android:left="14dp" android:right="14dp" android:top="14dp" android:bottom="14dp">
        <shape android:shape="rectangle">
            <solid android:color="#80000000"/> <!-- Цвет тени -->
            <corners android:radius="12dp"/>
        </shape>
    </item>

    <!-- Белый фон с серым контуром -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/window"/> <!-- Белый фон -->
            <stroke android:width="2dp" android:color="#CCCCCC"/> <!-- Серый контур -->
            <corners android:radius="12dp"/>
        </shape>
    </item>
</layer-list>

